<!DOCTYPE html>
<html>
<head>
  <title>Studyapp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1"></head>
<body>
<%= nav_bar fixed: :top, brand: "QuizApp", responsive: true do %>
    <%= menu_group do %>
        <%= menu_item "Home", root_path %>
        <%= menu_item "Quiz List", quizzes_path %>
        <%= menu_item "About", about_path %>
        <%= menu_item "Toggle Answer", 'javascript:void(0);', class: :toggle_answer %>
        <% if user_signed_in? %>
          <%= menu_item "Sign out", destroy_user_session_path %>
        <% else %>
          <%= menu_item "Sign in with Twitter", user_omniauth_authorize_path(:twitter) %>
        <% end %>
    <% end %>
    <%= menu_group pull: :right do %>
    <% end %>
<% end %>

<div class="container-fluid">
  <% flash.each do |key, value| %>
  <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>
  <div class="row">
    <%= yield %>
  </div>
</div>
</body>
</html>
